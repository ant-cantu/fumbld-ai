.login-container {
    background-color:white;
    /* border: 5px solid black; */
    display: flex;
    flex-direction: column;
    padding: 20px;
    justify-content: center;
    align-items: center;
    gap: 2px;
    width: 450px;
    height: 100%;
    margin: 0 auto;
    box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.18);
    border-radius: 18px;
}

.login-container .login-menu-container form {
    /* border: 5px solid red; */
    display: flex;
    flex-direction: column;
    margin: 0;
    padding: 0;
    justify-content: center;
    align-items: center;
    gap: 10px;
    height: 280px;
}

.login-container .login-header {
    /* border: 5px solid red; */
    text-align: center;
}

/* .login-container .form-username,
.login-container .form-password {
    border: 5px solid blue;
} */

.login-container .form-control {
    width: 25rem;
    /* border: 5px solid violet; */
}

.login-container .login-lower {
    display: flex;
    margin: 0;
    padding: 0;
    justify-content: space-between;
    align-items: center;
    /* border: 5px solid red; */
    width: 100%;
}

/* .login-container .login-lower .remember-me span {
    border: 5px solid violet;
}

.login-container .login-lower .forgot-link {
    border: 5px solid violet;
} */

.login-container .form-button {
    /* border: 5px solid blue; */
    margin-top: 25px;
    width: 95%;
    height: 50px;
}

.form-button .form-submit {
    width: 100%;
    height: 100%;

    /* Button Style */
    background: radial-gradient(circle at center, #0f172a 0%, #0a0f1e 60%, #060913 100%);
    color: #fff;
    border: none;
    border-radius: 12px;
    font-size: 1.2em;
    font-weight: 600;
    cursor: pointer;
    box-shadow: 0 4px 16px 0 rgba(15, 23, 42, 0.15);
    transition: background 0.3s, transform 0.2s, box-shadow 0.2s;

    &:hover {
        background: radial-gradient(circle at center, #16213a 0%, #10182a 60%, #0a0f1e 100%);
        transform: translateY(-2px) scale(1.03);
        box-shadow: 0 8px 24px 0 rgba(15, 23, 42, 0.22);
    }
}

/* Error Visual */
.form-control.is-invalid {
    border: 2px solid red;
    color: white;
}

.form-control::placeholder {
    color: #ffaaaa;
    opacity: 1;
}

/* Footer Style */
.footer-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    background-color: #111;
    width: 100%;
    padding: 10px 20px;
    margin: 0 auto;
}

.footer-container .footer-nav ul {
    display: flex;
    justify-content: center;
    align-items: center;
    list-style: none;
    gap: 10px;
    padding: 0;
    margin: 0;
}

.footer-container .footer-nav ul li a {
    color: white;
    text-decoration: none;
    font-size: 1.3em;
    opacity: 0.7;
    transition: 0.5s;
}

.footer-container .footer-nav ul li a:hover {
    opacity: 1;
    color: #74b9ff;
    transition: 0.3s;
}

.footer-container .footer-bottom p {
    color: white;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 0;
    margin: 0;
}

.footer-design {
    color: #74b9ff;
    font-weight: 400;
    margin: 0px 5px;
}

@media only screen and (max-width: 767.98px) { 
    /* Hamburger Menu Navigation */
    .nav-bar button {
        background-color: transparent;
        color: white;
        font-weight: bolder;
        border: none;
        font-size: larger;
        width: 3rem;
        display: block;
    }

    .nav-bar .nav-links {
        position: absolute;
        top: 57px;
        left: -200px;
        width: 200px;
        background-color: #444;
        flex-direction: column;
        border-radius: 5px;
        padding: 10px 0;
        transition: left 0.3s ease;
        display: flex;
        z-index: 1000;
    }

    .nav-bar ul li {
        list-style: none;
        display: flex;
        flex-direction: column;
        text-align: center;
        justify-content: center;
        align-items: center;
    }

    .nav-links.show {
        left: 0px;
    }

    /* Login Container */
    .login-container {
        width: 90%;
    }

    .login-container .login-menu-container {
        width: 90%;
    }

    .login-container .form-control {
        width: 20rem;
    }

    .login-container .login-lower {
        width: inherit;
        font-size: .8rem;
        justify-content: center;
        align-items: center;
        gap: 2.4rem;
    }

    #remember-me-container {
        display: flex;
        align-items: center;
        gap: 3px;
    }

    /* Footer Container */
    .footer-container {
        flex-direction: column;
    }
}