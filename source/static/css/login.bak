@import 'https://fonts.googleapis.com/css?family=Montserrat:300, 400, 700&display=swap';

html {
    font-family: 'Montserrat', sans-serif;
}

body {
    background-color: #f9fafb !important; /* Override Bootstrap */
    display: flex;
    flex-direction: column;
    margin: 0;
    padding: 0;
    min-height: 100vh;
    min-width: 100vw;
    justify-content: space-between;
    align-items: stretch;
    gap: 5px;
}

/* Navigation Menu */
.nav-bar {
    background: radial-gradient(circle at center, #0f172a 0%, #0a0f1e 60%, #060913 100%);
    width: 100%;
    display: flex;
    padding: 1% 6%;
    justify-content: space-between;
    align-items: center;
}

.nav-bar button {
    display: none;
}

.nav-bar img {
    width: 125px;
} 

.nav-bar .nav-links {
    flex: 1;
    text-align: right;
    font-size: larger;
}

.nav-bar ul {
    margin: 0;
    padding: 0;
}

.nav-bar ul li {
    list-style: none;
    display: inline-block;
    padding: 8px 12px;
    position: relative;
}

.nav-bar a {
    text-decoration: none;
    font-size: 20px;
    color: white;
}

.nav-bar .nav-links ul li::after {
    content: '';
    width: 0%;
    height: 2px;
    background-color: #74b9ff;
    display: block;
    margin: auto;
    transition: .3s;
}

.nav-bar .nav-links ul li:hover::after {
    width: 100%;
}

